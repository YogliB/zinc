{
	"name": "devflow-mcp",
	"version": "1.0.0",
	"description": "Memory-only MCP server for maintaining context across sessions with any AI agent",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"bin": {
		"devflow": "dist/devflow"
	},
	"engines": {
		"bun": "1.3.2"
	},
	"packageManager": "bun@1.3.2",
	"scripts": {
		"dev": "bun run src/index.ts",
		"build": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile ./dist/devflow --external effect --external @valibot/to-json-schema --external sury",
		"test": "bun test",
		"test:unit": "bun test tests/unit",
		"test:integration": "bun test tests/integration",
		"test:watch": "bun test --watch",
		"test:ui": "bun test --watch",
		"test:coverage": "bun test --coverage",
		"test:ai": "AGENT=1 bun test",
		"test:perf": "bun test --reporter=junit --reporter-outfile=.bun-test/results.xml && bun run scripts/test-performance.ts",
		"update-baseline": "bun run scripts/update-baseline.ts --update-baseline",
		"lint": "eslint . --max-warnings=0 --cache --cache-location .eslintcache",
		"lint:fix": "eslint --fix . --max-warnings=0 --cache --cache-location .eslintcache",
		"lint:clean": "rm -f .eslintcache",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"type-check": "bun run tsc --noEmit",
		"check:circular": "dpdm --no-warning --no-tree ./src/index.ts",
		"check:circular:verbose": "dpdm ./src/index.ts",
		"check:circular:ci": "dpdm --no-warning --no-tree --no-progress --exit-code circular:1 --tsconfig ./tsconfig.json ./src/index.ts",
		"prepare": "husky",
		"knip": "knip"
	},
	"keywords": [
		"mcp",
		"memory",
		"context",
		"persistent",
		"session",
		"ai-agent"
	],
	"author": "",
	"license": "MIT",
	"directories": {
		"doc": "docs"
	},
	"devDependencies": {
		"@eslint/js": "9.39.1",
		"@types/bun": "1.3.3",
		"@types/node": "24.10.1",
		"dpdm-fast": "1.0.14",
		"eslint": "9.39.1",
		"eslint-config-prettier": "10.1.8",
		"eslint-import-resolver-typescript": "4.4.4",
		"eslint-plugin-import": "2.32.0",
		"eslint-plugin-prettier": "5.5.4",
		"eslint-plugin-security": "3.0.1",
		"eslint-plugin-sonarjs": "3.0.5",
		"eslint-plugin-unicorn": "62.0.0",
		"fastmcp": "3.23.1",
		"husky": "9.1.7",
		"knip": "5.70.2",
		"lint-staged": "16.2.7",
		"prettier": "3.7.2",
		"typescript": "5.9.3",
		"typescript-eslint": "8.48.0",
		"zod": "4.1.13"
	},
	"lint-staged": {
		"*.{ts,js}": [
			"eslint --fix --max-warnings=0 --cache --cache-location .eslintcache"
		],
		"*.*": [
			"prettier --write --ignore-unknown"
		]
	},
	"prettier": {
		"singleQuote": true,
		"useTabs": true,
		"tabWidth": 4
	},
	"dependencies": {
		"gray-matter": "4.0.3"
	}
}
