{
	"name": "devflow-mcp",
	"version": "0.1.0",
	"description": "A comprehensive MCP server for universal project context management",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"bin": {
		"devflow": "dist/cli.js"
	},
	"engines": {
		"bun": "1.3.2"
	},
	"packageManager": "bun@1.3.2",
	"scripts": {
		"dev": "bun run src/index.ts",
		"build": "bun run tsc",
		"test": "bun test",
		"test:unit": "bun test tests/unit",
		"test:integration": "bun test tests/integration",
		"test:watch": "bun test --watch",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest --coverage",
		"test:ci": "CI=1 vitest run --coverage",
		"test:perf": "CI=1 vitest run && bun run scripts/test-performance.ts",
		"update-baseline": "bun run scripts/update-baseline.ts --update-baseline",
		"lint": "eslint .",
		"lint:fix": "eslint --fix .",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"type-check": "bun run tsc --noEmit",
		"check:circular": "dpdm --no-warning --no-tree ./src/index.ts",
		"check:circular:verbose": "dpdm ./src/index.ts",
		"check:circular:ci": "dpdm --no-warning --no-tree --no-progress --exit-code circular:1 --tsconfig ./tsconfig.json ./src/index.ts",
		"prepare": "husky"
	},
	"keywords": [
		"mcp",
		"project-context",
		"rules",
		"memory",
		"documentation",
		"planning"
	],
	"author": "",
	"license": "MIT",
	"directories": {
		"doc": "docs"
	},
	"devDependencies": {
		"@eslint/js": "9.39.1",
		"@modelcontextprotocol/sdk": "1.22.0",
		"@types/node": "24.10.1",
		"@vitest/coverage-v8": "4.0.13",
		"@vitest/ui": "4.0.13",
		"dpdm-fast": "1.0.14",
		"eslint": "9.39.1",
		"eslint-config-prettier": "10.1.8",
		"eslint-import-resolver-typescript": "4.4.4",
		"eslint-plugin-import": "2.32.0",
		"eslint-plugin-prettier": "5.5.4",
		"eslint-plugin-security": "3.0.1",
		"eslint-plugin-sonarjs": "3.0.5",
		"eslint-plugin-unicorn": "62.0.0",
		"fastmcp": "3.23.1",
		"husky": "9.1.7",
		"lint-staged": "16.2.7",
		"prettier": "3.6.2",
		"typescript": "5.9.3",
		"typescript-eslint": "8.47.0",
		"vitest": "4.0.13",
		"zod": "4.1.12"
	},
	"lint-staged": {
		"*.{ts,js}": [
			"eslint --fix"
		],
		"*.*": [
			"prettier --write --ignore-unknown"
		]
	},
	"prettier": {
		"singleQuote": true,
		"useTabs": true,
		"tabWidth": 4
	},
	"dependencies": {
		"gray-matter": "4.0.3"
	}
}
