{
	"name": "devflow-workspace",
	"version": "0.0.1",
	"description": "DevFlow monorepo - MCP server and dashboard",
	"type": "module",
	"private": true,
	"engines": {
		"bun": "1.3.2"
	},
	"packageManager": "bun@1.3.2",
	"workspaces": [
		"packages/core",
		"packages/dashboard"
	],
	"scripts": {
		"format:check": "prettier --check .",
		"format": "prettier --write .",
		"knip": "bun run --filter devflow-mcp knip",
		"lint:clean": "rm -f packages/core/.eslintcache packages/dashboard/.eslintcache",
		"lint:fix": "eslint --fix packages/core packages/dashboard --max-warnings=0 --cache",
		"lint": "eslint packages/core packages/dashboard --max-warnings=0 --cache",
		"test": "bun run --filter devflow-mcp test",
		"test:watch": "bun run --filter devflow-mcp test:watch",
		"test:coverage": "bun run --filter devflow-mcp test:coverage",
		"test:unit": "bun run --filter devflow-mcp test:unit",
		"test:integration": "bun run --filter devflow-mcp test:integration",
		"type-check": "bun run --filter devflow-mcp type-check",
		"build": "bun run --filter devflow-mcp build && bun run --filter dashboard build",
		"dev:core": "bun run --filter devflow-mcp dev",
		"dev:dashboard": "bun run --filter dashboard dev",
		"ci": "bun run lint && bun run test && bun run build",
		"generate:ci-sh": "bun run scripts/generate-ci-sh.ts",
		"validate:ci-sync": "bun run scripts/validate-ci-sync.ts"
	},
	"resolutions": {
		"cookie": "^0.7.0"
	},
	"prettier": {
		"singleQuote": true,
		"useTabs": true,
		"tabWidth": 4
	},
	"devDependencies": {
		"@eslint/js": "9.39.1",
		"eslint": "9.39.1",
		"eslint-config-prettier": "10.1.8",
		"eslint-import-resolver-typescript": "4.4.4",
		"eslint-plugin-import": "2.32.0",
		"eslint-plugin-prettier": "5.5.4",
		"eslint-plugin-security": "3.0.1",
		"eslint-plugin-sonarjs": "3.0.5",
		"eslint-plugin-storybook": "10.1.4",
		"eslint-plugin-svelte": "3.13.0",
		"eslint-plugin-unicorn": "62.0.0",
		"globals": "16.5.0",
		"prettier": "3.7.3",
		"typescript": "5.9.3",
		"typescript-eslint": "8.48.1",
		"yaml": "2.8.2"
	}
}
