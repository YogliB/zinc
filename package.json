{
  "name": "devflow-mcp",
  "version": "0.1.0",
  "description": "A comprehensive MCP server for universal project context management",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "devflow": "dist/cli.js"
  },
  "engines": {
    "bun": "1.3.2"
  },
  "packageManager": "bun@1.3.2",
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun run tsc",
    "test": "bun test",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "type-check": "bun run tsc --noEmit",
    "prepare": "husky install"
  },
  "keywords": [
    "mcp",
    "project-context",
    "rules",
    "memory",
    "documentation",
    "planning"
  ],
  "author": "",
  "license": "MIT",
  "directories": {
    "doc": "docs"
  },
  "devDependencies": {
    "@eslint/js": "9.17.0",
    "@modelcontextprotocol/sdk": "0.7.0",
    "@types/node": "22.10.1",
    "@vitest/ui": "2.1.8",
    "eslint": "9.17.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.2.1",
    "husky": "9.1.7",
    "lint-staged": "15.2.11",
    "prettier": "3.4.2",
    "typescript": "5.7.2",
    "typescript-eslint": "8.18.0",
    "vitest": "2.1.8"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "!(*.ts|*.js)": [
      "prettier --write --ignore-unknown"
    ]
  }
}
