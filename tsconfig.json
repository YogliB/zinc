{
	"compilerOptions": {
		"target": "ES2021",
		"module": "ESNext",
		"lib": ["ES2021"],
		"moduleResolution": "bundler",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"types": ["bun-types"]
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
