{
	"name": "devflow-mcp",
	"version": "0.0.1",
	"description": "Memory-only MCP server for maintaining context across sessions with any AI agent",
	"type": "module",
	"bin": {
		"devflow": "dist/server.js"
	},
	"engines": {
		"node": "24.11.1"
	},
	"scripts": {
		"build": "tsx scripts/build.ts",
		"check:circular:ci": "dpdm --no-warning --no-tree --no-progress --exit-code circular:1 --tsconfig ./tsconfig.json ./src/server.ts",
		"check:circular:verbose": "dpdm ./src/server.ts",
		"check:circular": "dpdm --no-warning --no-tree ./src/server.ts",
		"ci": "bash scripts/ci.sh",
		"dev": "tsx src/server.ts",
		"format:check": "prettier --check .",
		"format": "prettier --write .",
		"generate:ci-sh": "tsx scripts/generate-ci-sh.ts",
		"knip": "knip",
		"lint:clean": "rm -f .eslintcache",
		"lint:fix": "cd ../.. && eslint --fix packages/core --max-warnings=0 --cache --cache-location packages/core/.eslintcache",
		"lint": "cd ../.. && eslint packages/core --max-warnings=0 --cache --cache-location packages/core/.eslintcache",
		"test": "vitest run",
		"type-check": "tsc --noEmit",
		"update-baseline": "tsx scripts/update-baseline.ts --update-baseline",
		"validate:ci-sync": "tsx scripts/validate-ci-sync.ts"
	},
	"keywords": [
		"mcp",
		"memory",
		"context",
		"persistent",
		"session",
		"ai-agent",
		"code-analysis",
		"ast",
		"modelcontextprotocol",
		"typescript",
		"static-analysis",
		"developer-tools",
		"cli",
		"pattern-detection",
		"dependency-graph",
		"symbol-analysis"
	],
	"author": "YogliB <https://github.com/YogliB>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/YogliB/dev-toolkit-mcp.git"
	},
	"bugs": {
		"url": "https://github.com/YogliB/dev-toolkit-mcp/issues"
	},
	"homepage": "https://github.com/YogliB/dev-toolkit-mcp#readme",
	"funding": {
		"type": "github",
		"url": "https://github.com/sponsors/YogliB"
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE.md"
	],
	"directories": {
		"doc": "docs"
	},
	"devDependencies": {
		"@eslint/js": "9.39.1",
		"@modelcontextprotocol/sdk": "^1.24.3",
		"@types/better-sqlite3": "^7.6.13",
		"@types/node": "24.10.1",
		"@vitest/coverage-v8": "4.0.15",
		"dpdm-fast": "1.0.14",
		"drizzle-kit": "^0.31.8",
		"eslint": "9.39.1",
		"eslint-config-prettier": "10.1.8",
		"eslint-import-resolver-typescript": "4.4.4",
		"eslint-plugin-import": "2.32.0",
		"eslint-plugin-prettier": "5.5.4",
		"eslint-plugin-security": "3.0.1",
		"eslint-plugin-sonarjs": "3.0.5",
		"eslint-plugin-storybook": "10.1.4",
		"eslint-plugin-unicorn": "62.0.0",
		"fastmcp": "3.25.3",
		"husky": "9.1.7",
		"knip": "5.71.0",
		"lint-staged": "16.2.7",
		"prettier": "3.7.4",
		"typescript": "5.9.3",
		"typescript-eslint": "8.48.1",
		"vitest": "4.0.15",
		"yaml": "2.8.2",
		"zod": "4.1.13"
	},
	"lint-staged": {
		"*.{ts,js}": [
			"eslint --fix --max-warnings=0 --cache --cache-location .eslintcache"
		],
		"*.*": [
			"prettier --write --ignore-unknown"
		]
	},
	"dependencies": {
		"better-sqlite3": "^12.5.0",
		"drizzle-orm": "^0.45.0",
		"simple-git": "3.30.0",
		"ts-morph": "27.0.2"
	}
}
